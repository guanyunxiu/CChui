<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/height_10"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/world_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/word"
            android:text="关于源动力"
            android:textColor="@color/text_color"
            android:drawablePadding="@dimen/height_5"
            android:textSize="@dimen/size_12"
            android:gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/del_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_p_del"
            android:layout_gravity="right"
            android:layout_marginRight="-7dp"
            />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1"
        android:background="@color/col2"
        android:layout_marginTop="@dimen/height_10"
        android:layout_marginLeft="@dimen/height_5"
        />
</LinearLayout>