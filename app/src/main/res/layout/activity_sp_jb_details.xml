<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/col2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include layout="@layout/toolbar"/>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/height_10">
                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="@dimen/height_40"
                        android:layout_height="@dimen/height_40"
                        android:background="@drawable/photo_bg2"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_10"
                        android:padding="@dimen/height_5"
                        />
                    <TextView
                        android:id="@+id/status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="@color/text_color"
                        android:layout_marginLeft="@dimen/height_10"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/height_10"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sp_51"
                        android:textColor="@color/text_color"
                        />
                    <TextView
                        android:id="@+id/nums_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/line_color2"
                        android:layout_marginLeft="@dimen/height_5"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/height_10"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sp_52"
                        android:textColor="@color/text_color"
                        />
                    <TextView
                        android:id="@+id/dep_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/line_color2"
                        android:layout_marginLeft="@dimen/height_5"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/height_10"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sp_54"
                        android:textColor="@color/text_color"
                        />
                    <TextView
                        android:id="@+id/start_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/line_color2"
                        android:layout_marginLeft="@dimen/height_5"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/height_10"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sp_55"
                        android:textColor="@color/text_color"
                        />
                    <TextView
                        android:id="@+id/end_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/line_color2"
                        android:layout_marginLeft="@dimen/height_5"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/height_10"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sp_65"
                        android:textColor="@color/text_color"
                        />
                    <TextView
                        android:id="@+id/days_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/line_color2"
                        android:layout_marginLeft="@dimen/height_5"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/height_10"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sp_66"
                        android:textColor="@color/text_color"
                        />
                    <TextView
                        android:id="@+id/reason_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/line_color2"
                        android:layout_marginLeft="@dimen/height_5"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/height_10"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sp_67"
                        android:textColor="@color/text_color"
                        android:id="@+id/textView" />

                    <TextView
                        android:id="@+id/jjr_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/line_color2"
                        android:layout_marginLeft="@dimen/height_5"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/height_10"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sp_68"
                        android:textColor="@color/text_color"
                        />
                    <TextView
                        android:id="@+id/jbhsfs_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/line_color2"
                        android:layout_marginLeft="@dimen/height_5"
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_5"
                    android:background="@color/col2"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_5"
                    android:background="@color/white"
                    android:paddingTop="@dimen/height_10"
                    android:paddingBottom="@dimen/height_10"
                    android:layout_marginBottom="@dimen/height_55"
                    ></android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/status_lv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:layout_alignParentBottom="true"
        android:background="@color/blue"
        android:visibility="gone"

        >
        <TextView
            android:id="@+id/agree_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/sp_72"
            android:textColor="@color/white"
            android:gravity="center"
            />
        <View
            android:layout_width="@dimen/height_0.5"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginTop="@dimen/height_10"
            android:layout_marginBottom="@dimen/height_10"
            />
        <TextView
            android:id="@+id/refuse_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/sp_73"
            android:textColor="@color/white"
            android:gravity="center"
            />
    </LinearLayout>

</RelativeLayout>