<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/s_bg_tv"
            android:layout_width="@dimen/height_20"
            android:layout_height="@dimen/height_20"
            android:text="上"
            android:background="@drawable/daka_x_bg"
            android:textColor="@color/white"
            android:textSize="@dimen/size_12"
            android:gravity="center"
            />
        <View
            android:layout_width="@dimen/height_0.5"
            android:layout_height="@dimen/height_50"
            android:background="@color/line_color"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/height_10"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上班打卡时间：15：30"
                android:textColor="@color/line_color2"
                />
            <TextView
                android:id="@+id/status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="迟到"
                android:layout_marginLeft="@dimen/height_10"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="山西省太原市小店区"
            android:drawableLeft="@mipmap/icon_location_false"
            android:drawablePadding="@dimen/height_5"
            android:layout_marginTop="@dimen/height_5"
            android:gravity="center_vertical"
            android:textColor="@color/line_color2"
            />

    </LinearLayout>

</LinearLayout>