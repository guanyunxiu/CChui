<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/height_10"
    android:layout_marginTop="@dimen/height_10"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/name_photo_tv"
                android:layout_width="@dimen/height_40"
                android:layout_height="@dimen/height_40"
                android:text="帅龙"
                android:background="@drawable/photo_bg2"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_centerVertical="true"
                />
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_marginLeft="@dimen/height_10"
                 android:layout_gravity="center_vertical"
                 >
                 <TextView
                     android:id="@+id/name_tv"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="武帅龙"
                     android:textColor="@color/text_color"
                     android:textSize="@dimen/size_14"
                     />
                 <TextView
                     android:id="@+id/time_tv"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="2017/04/20 22:00"
                     android:textColor="@color/line_color2"
                     android:textSize="@dimen/size_12"
                     />
             </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/height_10"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/line_color2"
                android:text="今日完成工作："
                />
            <TextView
                android:id="@+id/con_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.完成智慧课堂界面制作 2.一想天开上传文件制作"
                android:textColor="@color/text_color"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/type_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/rz_03"
        android:layout_gravity="center|right"

        />
</FrameLayout>