<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:paddingLeft="@dimen/height_50"
        android:paddingRight="@dimen/height_50"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/height_20"
        android:gravity="center_horizontal"
        android:textSize="@dimen/size_18"
        />
    <TextView
        android:id="@+id/content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_marginTop="@dimen/height_20"
        android:paddingLeft="@dimen/height_10"
        android:paddingRight="@dimen/height_10"
        android:lineSpacingMultiplier="1.5"
        />
    <TextView
        android:id="@+id/company_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/height_50"
        android:paddingRight="@dimen/height_10"
        />
    <TextView
        android:id="@+id/release_peo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_gravity="right"
        android:paddingRight="@dimen/height_10"
        android:layout_marginTop="@dimen/height_10"
        />
    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_gravity="right"
        android:paddingRight="@dimen/height_10"
        android:layout_marginTop="@dimen/height_10"
        />
</LinearLayout>