<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:multistateview="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/col2">

    <LinearLayout
        android:id="@+id/screen_lv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:gravity="center"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/screen_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ydl_01"
            android:layout_gravity="center_vertical"
            android:background="@color/col2"
            android:paddingTop="@dimen/height_5"
            android:paddingBottom="@dimen/height_5"
            android:paddingLeft="@dimen/height_10"
            android:paddingRight="@dimen/height_10"
            android:drawableRight="@mipmap/icon_bottom_arr"
            android:textColor="@color/text_color"
            android:drawablePadding="@dimen/height_5"
            android:textSize="@dimen/size_14"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1"
        android:background="@color/col2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/height_10"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:background="@color/title_bg"
        >
        <TextView
            android:id="@+id/current_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="1/"
            android:layout_gravity="center_horizontal"

            />
        <TextView
            android:id="@+id/total_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="1"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
</LinearLayout>