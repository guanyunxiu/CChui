<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:circleimageview="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/photo_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/col2"
        android:paddingTop="@dimen/height_15"
        android:paddingBottom="@dimen/height_15"
        android:paddingLeft="@dimen/height_10"
        android:paddingRight="@dimen/height_10"
        >
        <TextView
            android:id="@+id/name_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:text="关云秀"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/photo_tv"
            android:layout_width="@dimen/height_35"
            android:layout_height="@dimen/height_35"
            android:background="@drawable/photo_bg2"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/size_12"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview"
            android:layout_width="@dimen/height_35"
            android:layout_height="@dimen/height_35"
            android:src="@color/blue"
            circleimageview:civ_border_color="@android:color/holo_red_light"
            circleimageview:civ_border_overlay="false"
            circleimageview:civ_border_width="2dp"
            circleimageview:civ_fill_color="@android:color/holo_blue_light"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="gone"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_right_arr"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/height_10"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bumen_lv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:background="@color/col2"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/height_5"
        android:paddingLeft="@dimen/height_10"
        android:paddingRight="@dimen/height_10"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/my_12"
            android:textColor="@color/text_color"
            android:layout_gravity="center_vertical"

            />
        <TextView
            android:id="@+id/bumen_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="技术部"
            android:textColor="@color/text_color"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/zhiwu_lv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:background="@color/col2"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/height_5"
        android:paddingLeft="@dimen/height_10"
        android:paddingRight="@dimen/height_10"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/my_13"
            android:textColor="@color/text_color"
            android:layout_gravity="center_vertical"

            />
        <TextView
            android:id="@+id/zhiwu_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="员工"
            android:textColor="@color/text_color"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/phone_lv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:background="@color/col2"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/height_5"
        android:paddingLeft="@dimen/height_10"
        android:paddingRight="@dimen/height_10"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/my_14"
            android:textColor="@color/text_color"
            android:layout_gravity="center_vertical"

            />
        <TextView
            android:id="@+id/phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15234077743"
            android:textColor="@color/text_color"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sex_lv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:background="@color/col2"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/height_5"
        android:paddingLeft="@dimen/height_10"
        android:paddingRight="@dimen/height_10"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/my_15"
            android:textColor="@color/text_color"
            android:layout_gravity="center_vertical"

            />
        <TextView
            android:id="@+id/sex_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"
            android:textColor="@color/text_color"
            android:drawableRight="@mipmap/icon_right_arr"
            android:drawablePadding="@dimen/height_10"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/area_lv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:background="@color/col2"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/height_5"
        android:paddingLeft="@dimen/height_10"
        android:paddingRight="@dimen/height_10"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/my_16"
            android:textColor="@color/text_color"
            android:layout_gravity="center_vertical"

            />
        <TextView
            android:id="@+id/area_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="山西-太原"
            android:textColor="@color/text_color"
            android:drawableRight="@mipmap/icon_right_arr"
            android:drawablePadding="@dimen/height_10"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <Button
        android:id="@+id/sub_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg4"
        android:layout_marginLeft="@dimen/height_50"
        android:layout_marginRight="@dimen/height_50"
        android:layout_marginTop="@dimen/height_50"
        android:text="@string/my_17"
        android:textColor="@color/blue"
        android:textSize="@dimen/size_16"
        />
</LinearLayout>