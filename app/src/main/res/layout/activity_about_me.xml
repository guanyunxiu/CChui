<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_about_me"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/height_50"
        />
     <TextView
         android:id="@+id/version_tv"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="版本号：V1.1"
         android:textColor="@color/blue"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="@dimen/height_10"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_42"
        android:textColor="@color/text_color"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/height_25"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_43"
        android:textColor="@color/text_color"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/height_5"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_10"
        android:background="@color/col2"
        android:layout_marginTop="@dimen/height_40"
        android:layout_marginBottom="@dimen/height_40"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地址：山西省太原市高新区电子商务产业园3层"
        android:textColor="@color/line_color2"
        android:layout_marginLeft="@dimen/height_10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系方式：0351-1234567"
        android:textColor="@color/line_color2"
        android:layout_marginLeft="@dimen/height_10"
        android:layout_marginTop="@dimen/height_10"
        />
</LinearLayout>