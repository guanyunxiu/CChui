<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardCornerRadius="@dimen/height_5"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginTop="@dimen/height_10"
    app:cardBackgroundColor="@color/white"
    android:layout_marginLeft="@dimen/height_10"
    android:layout_marginRight="@dimen/height_10"
    >

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/height_10"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8月7日会议记录"
                    android:textColor="@color/text_color"
                    android:drawableLeft="@mipmap/icon_word"
                    android:drawablePadding="@dimen/height_5"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标题：智慧城乡内容文档"
                    android:layout_marginTop="@dimen/height_5"
                    android:layout_marginLeft="@dimen/height_10"
                    android:textColor="@color/text_color"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发送人：关云秀"
                    android:layout_marginTop="@dimen/height_5"
                    android:layout_marginLeft="@dimen/height_10"
                    android:textColor="@color/text_color"
                    />
            </LinearLayout>


        </RelativeLayout>
        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4月27日 15：00"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/size_12"
            android:textColor="@color/line_color2"
            android:layout_marginLeft="@dimen/height_10"
            android:layout_marginTop="@dimen/height_5"
            />
      </LinearLayout>
</android.support.v7.widget.CardView>