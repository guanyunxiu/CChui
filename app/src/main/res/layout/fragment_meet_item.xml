<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardCornerRadius="@dimen/height_5"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginTop="@dimen/height_10"
    app:cardBackgroundColor="@color/white"
    android:layout_marginLeft="@dimen/height_10"
    android:layout_marginRight="@dimen/height_10"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/height_10"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_alignParentLeft="true"
             >
             <TextView
                 android:id="@+id/title_tv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="关云秀的会议"
                 android:textColor="@color/text_color"
                 />
             <TextView
                 android:id="@+id/company_tv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/line_color2"
                 android:text="山西赛文思达科技有限公司"
                 android:textSize="@dimen/size_14"
                 android:layout_marginTop="@dimen/height_5"
                 />
             <TextView
                 android:id="@+id/num_tv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/line_color2"
                 android:text="参会人员：武帅龙、冯晋超等"
                 android:textSize="@dimen/size_14"
                 android:layout_marginTop="@dimen/height_5"
                 />
             <TextView
                 android:id="@+id/time_tv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/line_color2"
                 android:text="开始时间：2017年8月4日10：00"
                 android:textSize="@dimen/size_14"
                 android:layout_marginTop="@dimen/height_5"
                 />
         </LinearLayout>

         <TextView
             android:id="@+id/after_time_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:drawableLeft="@mipmap/icon_chui"
             android:text="30分钟后开始"
             android:textColor="@color/line_color2"
             android:textSize="@dimen/size_12"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:drawablePadding="@dimen/height_5"
             />
    </RelativeLayout>

</LinearLayout>
    </android.support.v7.widget.CardView>