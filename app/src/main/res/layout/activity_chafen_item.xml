<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:padding="@dimen/height_10"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45"
        android:orientation="horizontal"
       android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            />
        <TextView
            android:id="@+id/allscore_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/blue"
            android:text="总分：200分"
            android:drawableRight="@mipmap/icon_right_arr"
            android:drawablePadding="@dimen/height_5"
            />
    </RelativeLayout>
    <chui.swsd.com.cchui.expandable.ExpandableLayout
        android:id="@+id/expandLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/col2"
        app:el_duration="500"
        app:el_expanded="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/height_10"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:id="@+id/kuo_rlv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/jichu_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基础分：50分"
                    android:textColor="@color/text_color"
                    />
                <TextView
                    android:id="@+id/company_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司价值分：150分"
                    android:textColor="@color/text_color"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/sociology_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="社会价值分：50分"
                    android:textColor="@color/text_color"
                    />
                <TextView
                    android:id="@+id/staff_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="员工分：150分"
                    android:textColor="@color/text_color"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

        </LinearLayout>

    </chui.swsd.com.cchui.expandable.ExpandableLayout>

</LinearLayout>