<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:multistateview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/height_10"
        android:paddingRight="@dimen/height_10"

        android:layout_marginTop="@dimen/height_10"
        android:layout_marginBottom="@dimen/height_10"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/file_01"
            android:textColor="@color/text_color"
            />
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:background="@null"
            android:textSize="@dimen/size_14"
            android:layout_marginLeft="@dimen/height_5"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1"
        android:background="@color/col2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/height_10"
        android:paddingRight="@dimen/height_10"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/file_07"
            android:textColor="@color/text_color"
            />
        <TextView
            android:id="@+id/time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:background="@null"
            android:textSize="@dimen/size_14"
            android:layout_marginLeft="@dimen/height_5"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1"
        android:background="@color/col2"
        />
    <TextView
        android:id="@+id/add_fj_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:text="@string/file_06"
        android:textColor="@color/text_color"

        android:gravity="center_vertical"
        android:drawablePadding="@dimen/height_5"
        android:padding="@dimen/height_10"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1"
        android:background="@color/col2"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</LinearLayout>