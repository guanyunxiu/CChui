<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ydl_bg"
        android:padding="@dimen/height_10"
        android:scaleType="centerCrop"
        />
     <Button
         android:id="@+id/dafen_btn"
         android:layout_width="match_parent"
         android:layout_height="@dimen/height_45"
         android:layout_marginLeft="@dimen/height_50"
         android:layout_marginRight="@dimen/height_50"
         android:background="@drawable/btn_bg2"
         android:textColor="@color/white"
         android:text="@string/apply_12"
         android:textSize="@dimen/size_18"
         android:layout_marginTop="@dimen/height_50"
         />
    <Button
        android:id="@+id/ckfs_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45"
        android:layout_marginLeft="@dimen/height_50"
        android:layout_marginRight="@dimen/height_50"
        android:background="@drawable/btn_bg2"
        android:textColor="@color/white"
        android:text="@string/apply_13"
        android:textSize="@dimen/size_18"
        android:layout_marginTop="@dimen/height_10"
        />
</LinearLayout>