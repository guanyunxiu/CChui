<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:circleimageview="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:id="@+id/photo_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingTop="@dimen/height_15"
        android:paddingBottom="@dimen/height_15"
        android:paddingLeft="@dimen/height_10"
        android:paddingRight="@dimen/height_10"
        >
        <TextView
            android:id="@+id/photo_tv"
            android:layout_width="@dimen/height_35"
            android:layout_height="@dimen/height_35"
            android:background="@drawable/photo_bg2"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/size_12"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview"
            android:layout_width="@dimen/height_35"
            android:layout_height="@dimen/height_35"
            android:src="@color/blue"
            circleimageview:civ_border_color="@android:color/holo_red_light"
            circleimageview:civ_border_overlay="false"
            circleimageview:civ_border_width="2dp"
            circleimageview:civ_fill_color="@android:color/holo_blue_light"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/name_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:text="关云秀"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/height_10"
            />
        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2017年8月"
            android:textColor="@color/text_color"
            android:drawableRight="@mipmap/icon_bottom_arr"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/height_5"
            android:textSize="@dimen/size_12"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_0.5"
        android:background="@color/line_color2"
        ></View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:background="@color/col2"
        android:text="@string/my_18"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/height_10"
        android:paddingRight="@dimen/height_10"
        android:textColor="@color/text_color"
        />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/height_10"
                android:paddingRight="@dimen/height_10"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/my_19"
                    android:textColor="@color/text_color"
                    />
                <TextView
                    android:id="@+id/cqts_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_color"
                    android:text="2天"
                    android:drawableRight="@mipmap/icon_bottom_arr"
                    android:drawablePadding="@dimen/height_10"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
            <chui.swsd.com.cchui.expandable.ExpandableLayout
                android:id="@+id/expandLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/col2"
                app:el_duration="500"
                app:el_expanded="false">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/cqts_rlv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        />
            </chui.swsd.com.cchui.expandable.ExpandableLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_0.5"
                android:background="@color/line_color2"
                ></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/height_10"
                android:paddingRight="@dimen/height_10"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/my_21"
                    android:textColor="@color/text_color"
                    />
                <TextView
                    android:id="@+id/xxts_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_color"
                    android:text="0天"
                    android:drawableRight="@mipmap/icon_bottom_arr"
                    android:drawablePadding="@dimen/height_10"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
            <chui.swsd.com.cchui.expandable.ExpandableLayout
                android:id="@+id/expandLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/col2"
                android:clickable="true">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/xxts_rlv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                   />
            </chui.swsd.com.cchui.expandable.ExpandableLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_0.5"
                android:background="@color/line_color2"
                ></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/height_10"
                android:paddingRight="@dimen/height_10"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/my_22"
                    android:textColor="@color/text_color"
                    />
                <TextView
                    android:id="@+id/cd_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_color"
                    android:text="0天"
                    android:drawableRight="@mipmap/icon_bottom_arr"
                    android:drawablePadding="@dimen/height_10"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
            <chui.swsd.com.cchui.expandable.ExpandableLayout
                android:id="@+id/expandLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/col2"
                android:clickable="true">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/cd_rlv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                   />
            </chui.swsd.com.cchui.expandable.ExpandableLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_0.5"
                android:background="@color/line_color2"
                ></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/height_10"
                android:paddingRight="@dimen/height_10"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/my_23"
                    android:textColor="@color/text_color"
                    />
                <TextView
                    android:id="@+id/zt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_color"
                    android:text="0天"
                    android:drawableRight="@mipmap/icon_bottom_arr"
                    android:drawablePadding="@dimen/height_10"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
            <chui.swsd.com.cchui.expandable.ExpandableLayout
                android:id="@+id/expandLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/col2"
                android:clickable="true">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/zt_rlv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                  />
            </chui.swsd.com.cchui.expandable.ExpandableLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_0.5"
                android:background="@color/line_color2"
                ></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/height_10"
                android:paddingRight="@dimen/height_10"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/my_24"
                    android:textColor="@color/text_color"
                    />
                <TextView
                    android:id="@+id/qk_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_color"
                    android:text="0天"
                    android:drawableRight="@mipmap/icon_bottom_arr"
                    android:drawablePadding="@dimen/height_10"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
            <chui.swsd.com.cchui.expandable.ExpandableLayout
                android:id="@+id/expandLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/col2"
                android:clickable="true">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/qk_rlv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                   />
            </chui.swsd.com.cchui.expandable.ExpandableLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_0.5"
                android:background="@color/line_color2"
                ></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/height_10"
                android:paddingRight="@dimen/height_10"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/my_25"
                    android:textColor="@color/text_color"
                    />
                <TextView
                    android:id="@+id/kg_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_color"
                    android:text="0天"
                    android:drawableRight="@mipmap/icon_bottom_arr"
                    android:drawablePadding="@dimen/height_10"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
            <chui.swsd.com.cchui.expandable.ExpandableLayout
                android:id="@+id/expandLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/col2"
                android:clickable="true">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/kg_rlv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                   />
            </chui.swsd.com.cchui.expandable.ExpandableLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_0.5"
                android:background="@color/line_color2"
                ></View>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>