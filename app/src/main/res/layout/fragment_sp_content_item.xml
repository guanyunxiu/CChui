<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardCornerRadius="@dimen/height_5"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginTop="@dimen/height_10"
    app:cardBackgroundColor="@color/white"
    android:layout_marginLeft="@dimen/height_10"
    android:layout_marginRight="@dimen/height_10"
    >
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/height_10"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:id="@+id/name_tv"
                android:layout_width="@dimen/height_50"
                android:layout_height="@dimen/height_50"
                android:text="帅龙"
                android:background="@drawable/photo_bg2"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_centerVertical="true"
                />
            <LinearLayout
                android:id="@+id/baoxiao_lv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/name_tv"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/height_10"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="武帅龙的报销"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/line_color2"
                    android:textSize="@dimen/size_12"
                    android:text="报销金额:1899元"
                    android:layout_marginTop="@dimen/height_5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/line_color2"
                    android:textSize="@dimen/size_12"
                    android:text="报销类型:差旅费"
                    android:layout_marginTop="@dimen/height_5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/line_color2"
                    android:textSize="@dimen/size_12"
                    android:text="报销明细：北京往返机票"
                    android:layout_marginTop="@dimen/height_5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/size_12"
                    android:text="关云秀审批中"
                    android:layout_marginTop="@dimen/height_5"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/jiaban_lv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/name_tv"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/height_10"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="武帅龙的报销"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/line_color2"
                    android:textSize="@dimen/size_12"
                    android:text="开始时间：2017-08-04 18：00"
                    android:layout_marginTop="@dimen/height_5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/line_color2"
                    android:textSize="@dimen/size_12"
                    android:text="结束时间：2017-08-04 20：00"
                    android:layout_marginTop="@dimen/height_5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/size_12"
                    android:text="关云秀审批中"
                    android:layout_marginTop="@dimen/height_5"
                    />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
