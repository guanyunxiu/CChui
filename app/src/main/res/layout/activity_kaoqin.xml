<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.amap.api.maps2d.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_150"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/height_10"
                android:paddingRight="@dimen/height_10"
                android:paddingTop="@dimen/height_10"
                android:paddingBottom="@dimen/height_10"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/apply_08"
                    android:drawableLeft="@mipmap/icon_location_true"
                    android:drawablePadding="@dimen/height_5"
                    android:textColor="@color/blue"
                    />
                <TextView
                    android:id="@+id/location_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/line_color2"
                    android:text="山西省小店区山西省小店区山西省小店区山西省小店区山西省小店区"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_0.5"
                android:background="@color/line_color2"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/daka_rlv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/height_10"
                android:paddingRight="@dimen/height_10"
                android:layout_marginTop="@dimen/height_10"
                >

            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/s_bg_tv"
                    android:layout_width="@dimen/height_20"
                    android:layout_height="@dimen/height_20"
                    android:text="上"
                    android:background="@drawable/daka_x_bg"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_12"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/height_10"
                    />
                <TextView
                    android:id="@+id/status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/height_5"
                    android:layout_marginLeft="@dimen/height_10"
                    android:gravity="center_vertical"
                    android:textColor="@color/line_color2"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/daka_lv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@mipmap/icon_daka_bg"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_30"
                android:layout_marginBottom="@dimen/height_20"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/apply_09"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_20"
                    />
                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15:30:44"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/height_5"
                    />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>